#!/bin/bash
#
# tomcat        
#
# chkconfig: 2345 20 80
# description: 	Start up the Tomcat CAS engine.

# Source function library.
. /etc/init.d/functions

RETVAL=$?
CATALINA_HOME="/apps/tomcat-cas"
WEBAPP=cas
SHUTDOWN_WAIT=15

tomcat_pid() {
    echo `ps -ef | grep tomcat-cas | grep appadmin | grep -v grep | awk '{print $2}'`
}

case "$1" in
 start)
{
	pid=$(tomcat_pid)
	if [ -n "$pid" ]
	then
		echo "Tomcat-cas is already running (pid: $pid)"
	else
	#start tomcat-cas
            echo $"Starting Tomcat-CAS"
            /bin/su - appadmin $CATALINA_HOME/bin/startup.sh
	fi
}
;;
 stop)
{       
        pid=$(tomcat_pid)
        if [ -n "$pid" ]
        then
            echo $"Stopping Tomcat-CAS"
            /bin/su - appadmin $CATALINA_HOME/bin/shutdown.sh
        else
	 echo "tomcat-cas is not running"
        fi

        /apps/sh/killit tomcat-cas
}
;;
 undeploy)
        mkdir $CATALINA_HOME/war 2>/dev/null
        rm -rf $CATALINA_HOME/webapps/${WEBAPP}
        mv -f $CATALINA_HOME/webapps/${WEBAPP}.war $CATALINA_HOME/war/${WEBAPP}.war.`date +%m-%d-%Y-%T`
        ;;

 restart)
{
        pid=$(tomcat_pid)
        if [ -n "$pid" ]
        then
            echo $"Stopping Tomcat-CAS"
            /bin/su - appadmin $CATALINA_HOME/bin/shutdown.sh
        
let kwait=$SHUTDOWN_WAIT
    count=0
    count_by=5
    until [ `ps -p $pid | grep -c $pid` = '0' ] || [ $count -gt $kwait ]
    do
        echo "Waiting for processes to exit. Timeout before we kill the pid: ${count}/${kwait}"
        sleep $count_by
        let count=$count+$count_by;
    done
 
    if [ $count -gt $kwait ]; then
        echo "Killing processes which didn't stop after $SHUTDOWN_WAIT seconds"
        kill -9 $pid
    fi
    else
        echo "Tomcat is not running"
    fi	

	pid=$(tomcat_pid)
        if [ -n "$pid" ]
        then
                echo "Tomcat-cas is already running (pid: $pid)"
        else
        #start tomcat-cas
            echo $"Starting Tomcat-CAS"
            /bin/su - appadmin $CATALINA_HOME/bin/startup.sh
        fi
}
        ;;
status)
       pid=$(tomcat_pid)
        if [ -n "$pid" ]
        then
           echo "Tomcat-cas is running with pid: $pid"
        else
           echo "Tomcat-cas is not running"
        fi
        ;;
 *)
        echo $"Usage: $0 {start|stop|status|restart|undeploy}"
        exit 1
        ;;
esac

exit $RETVAL
